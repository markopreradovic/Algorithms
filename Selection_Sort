void SelectionSort (int arr[], int n) 
{
   int i, j, min;
   for (i=0; i<n-1; i++) 
   {
      for (min=i, j=i+1; j<n; j++) 
         if (arr[j]<arr[min]) min=j;
      if (min!=i)
      {
         int pom=arr[i]; arr[i]=arr[min]; arr[min]=pom;
      }
   }
}

//in this case int but it can sort other types as well
